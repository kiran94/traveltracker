<?xml version="1.0" encoding="UTF-8"?>
<database name="traveltracker" defaultIdMethod="native">
  
  <table name="Trip" phpName="Trip">
    <column name="ID" type="char" required="true" primaryKey="true" size="36" />
    <column name="Name" type="varchar" required="true" size="36" />
  </table>

  <table name="Location" phpName="Location">
    <column name="ID" type="char" required="true" primaryKey="true" size="36" />
    <column name="Lat" type="float" required="true" />
    <column name="Long" type="float" required="true" />
    <column name="Name" type="varchar" required="false" />
    <column name="Date" type="date" required="true" />
    <column name="TripID" type="char" required="true" size="36" />

    <foreign-key foreignTable="Trip" phpName="Trip">
        <reference local="TripID" foreign="ID" />
    </foreign-key>
  </table>

</database>